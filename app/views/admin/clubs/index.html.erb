<% content_for :title, "Clubs · Admin" %>
<% content_for :page_heading, "Clubs" %>

<section class="rounded-lg border border-slate-200 bg-white shadow-sm">
  <header class="flex items-center justify-between gap-3 border-b border-slate-200 px-4 py-3">
    <h2 class="text-base font-semibold text-slate-900">All clubs</h2>
    <%= link_to "New club", new_admin_club_path, class: "rounded bg-slate-900 px-3 py-2 text-sm font-medium text-white hover:bg-slate-800" %>
  </header>

  <table class="min-w-full divide-y divide-slate-200 text-sm">
    <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
      <tr>
        <th class="px-4 py-3">Name</th>
        <th class="px-4 py-3">Domain</th>
        <th class="px-4 py-3">Members</th>
        <th class="px-4 py-3 text-right">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-100">
      <% @clubs.each do |club| %>
        <tr class="hover:bg-slate-50">
          <td class="px-4 py-3 font-medium text-slate-900"><%= link_to club.name, admin_club_path(club), class: "hover:text-slate-700" %></td>
          <td class="px-4 py-3 text-slate-600"><%= club.primary_domain.presence || club.subdomain.presence || "—" %></td>
          <td class="px-4 py-3 text-slate-600"><%= club.members.size %></td>
          <td class="px-4 py-3 text-right">
            <%= button_to "Impersonate", impersonate_admin_club_path(club), method: :post, class: "text-sm font-medium text-slate-600 hover:text-slate-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
