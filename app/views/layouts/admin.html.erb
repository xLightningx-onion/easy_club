<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin Â· Easy Club" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="min-h-screen bg-slate-100 text-slate-900">
    <div class="flex min-h-screen">
      <aside class="hidden w-64 flex-shrink-0 flex-col bg-slate-950 text-slate-200 sm:flex">
        <div class="px-6 py-5 text-lg font-semibold">
          <%= link_to "Easy Club", admin_dashboard_path, class: "inline-flex items-center gap-2 text-white" %>
        </div>
        <nav class="flex-1 space-y-1 px-3 pb-6">
          <%= link_to "Dashboard", admin_dashboard_path, class: sidebar_link_classes(admin_dashboard_path) %>
          <%= link_to "Clubs", admin_clubs_path, class: sidebar_link_classes(admin_clubs_path) %>
          <%= link_to "Users", admin_users_path, class: sidebar_link_classes(admin_users_path) %>
          <%= link_to "Memberships", admin_members_path, class: sidebar_link_classes(admin_members_path) %>
          <%= link_to "Invoices", admin_invoices_path, class: sidebar_link_classes(admin_invoices_path) %>
          <%= link_to "Orders", admin_orders_path, class: sidebar_link_classes(admin_orders_path) %>
          <%= link_to "Broadcasts", admin_broadcasts_path, class: sidebar_link_classes(admin_broadcasts_path) %>
          <%= link_to "Audits", admin_audits_path, class: sidebar_link_classes(admin_audits_path) %>
          <%= link_to "Retention Jobs", admin_retention_jobs_path, class: sidebar_link_classes(admin_retention_jobs_path) %>
        </nav>
      </aside>

      <main class="flex-1">
        <header class="flex flex-col gap-2 border-b border-slate-200 bg-white px-6 py-4 shadow-sm sm:flex-row sm:items-center sm:justify-between">
          <h1 class="text-2xl font-semibold text-slate-900"><%= content_for(:page_heading) || "Admin" %></h1>
          <div class="flex items-center gap-3 text-sm text-slate-600">
            <span>Signed in as <strong class="font-semibold text-slate-900"><%= current_user.email %></strong></span>
            <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "rounded bg-slate-200 px-3 py-1 text-slate-800 hover:bg-slate-300" %>
          </div>
          <nav class="-mx-1 flex flex-wrap gap-2 text-xs font-medium text-slate-600 sm:hidden">
            <%= link_to "Dashboard", admin_dashboard_path, class: sidebar_link_classes(admin_dashboard_path, variant: :light) %>
            <%= link_to "Clubs", admin_clubs_path, class: sidebar_link_classes(admin_clubs_path, variant: :light) %>
            <%= link_to "Users", admin_users_path, class: sidebar_link_classes(admin_users_path, variant: :light) %>
            <%= link_to "Memberships", admin_members_path, class: sidebar_link_classes(admin_members_path, variant: :light) %>
            <%= link_to "Invoices", admin_invoices_path, class: sidebar_link_classes(admin_invoices_path, variant: :light) %>
            <%= link_to "Orders", admin_orders_path, class: sidebar_link_classes(admin_orders_path, variant: :light) %>
            <%= link_to "Broadcasts", admin_broadcasts_path, class: sidebar_link_classes(admin_broadcasts_path, variant: :light) %>
            <%= link_to "Audits", admin_audits_path, class: sidebar_link_classes(admin_audits_path, variant: :light) %>
            <%= link_to "Retention", admin_retention_jobs_path, class: sidebar_link_classes(admin_retention_jobs_path, variant: :light) %>
          </nav>
        </header>

        <div class="px-6 py-6">
          <%= render "admin/shared/flash" %>
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
