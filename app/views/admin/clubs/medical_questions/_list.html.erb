<% if medical_questions.any? %>
  <div class="divide-y divide-slate-200">
    <% medical_questions.each_with_index do |medical_question, index| %>
      <%= render "admin/clubs/medical_questions/question",
                 club: club,
                 medical_question: medical_question,
                 index: index + 1 %>
    <% end %>
  </div>
<% else %>
  <div class="px-4 py-10 text-center text-sm text-slate-500">
    <p class="font-medium text-slate-700">No medical questions yet</p>
    <p class="mt-1 text-xs text-slate-500">Add questions to capture critical health information during registration.</p>
  </div>
<% end %>
