<% content_for :title, "Checkout Â· #{current_club.name}" %>

<div class="mx-auto max-w-5xl space-y-8 px-4 py-8">
  <div class="space-y-2">
    <h1 class="text-2xl font-semibold text-slate-900">Complete checkout</h1>
    <p class="text-sm text-slate-600">
      Review the memberships in your cart and choose how you would like to pay. Payments are securely processed via PayGate PayWeb.
    </p>
  </div>

  <% if @cart_items.empty? %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 px-6 py-10 text-center">
      <p class="text-sm text-slate-500">Your cart is empty. Add a membership to continue.</p>
      <div class="mt-4 flex flex-wrap items-center justify-center gap-3">
        <%= link_to "Browse club plans", club_plans_path, class: "inline-flex items-center justify-center rounded-full border border-slate-300 px-5 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-400 hover:text-slate-900" %>
        <%= link_to "Add membership", members_membership_registration_path(step: "personal", club_id: current_club.id, restart: true), class: "inline-flex items-center justify-center rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold text-white shadow transition hover:bg-slate-800" %>
      </div>
    </div>
  <% else %>
    <div class="grid gap-6 lg:grid-cols-[2fr_3fr]">
      <section class="space-y-4 rounded-xl border border-slate-200 bg-white px-4 py-4 shadow-sm">
        <header class="flex items-center justify-between">
          <h2 class="text-base font-semibold text-slate-900">Memberships</h2>
          <%= link_to "Add another", members_membership_registration_path(step: "personal", club_id: current_club.id, restart: true), class: "text-sm font-semibold text-slate-600 transition hover:text-slate-900" %>
        </header>

        <div class="space-y-4">
          <% @cart_items.each do |item| %>
            <% plan = item.plan %>
            <% product = plan&.product %>
            <article class="rounded-lg border border-slate-200 px-4 py-4">
              <div class="flex flex-col gap-3 md:flex-row md:items-start md:justify-between">
                <div class="space-y-1">
                  <p class="text-sm font-semibold text-slate-900"><%= item.member.display_name %></p>
                  <p class="text-xs text-slate-500"><%= product&.name || "Membership plan" %></p>
                  <% if plan&.plan_type_recurring? %>
                    <p class="text-[11px] uppercase tracking-wide text-slate-400">Recurring every <%= plan.interval_months %> month(s)</p>
                  <% elsif plan&.plan_type_installments? %>
                    <p class="text-[11px] uppercase tracking-wide text-slate-400"><%= plan.installments_count %> installments</p>
                  <% end %>
                </div>
                <div class="text-right">
                  <p class="text-sm font-semibold text-slate-900">
                    <%= number_to_currency(item.total_price_cents / 100.0, unit: item.total_price_currency) %>
                  </p>
                  <p class="text-xs text-slate-500">Qty <%= item.quantity %></p>
                </div>
              </div>

              <div class="mt-3 flex flex-wrap items-center justify-between gap-2 text-xs text-slate-500">
                <span>Unit price: <%= number_to_currency(item.unit_price_cents / 100.0, unit: item.unit_price_currency) %></span>
                <%= button_to "Remove", club_cart_item_path(item), method: :delete, class: "text-xs font-semibold text-rose-600 hover:text-rose-700", data: { turbo_confirm: "Remove this membership?" } %>
              </div>
            </article>
          <% end %>
        </div>

        <footer class="flex items-center justify-between rounded-lg bg-slate-50 px-4 py-3">
          <span class="text-sm font-medium text-slate-600">Cart total</span>
          <span class="text-base font-semibold text-slate-900"><%= number_to_currency(@cart.total_cents / 100.0, unit: @cart.total_currency) %></span>
        </footer>
      </section>

      <section class="space-y-6 rounded-xl border border-slate-200 bg-white px-4 py-6 shadow-sm">
        <% default_method = @payment_methods.first %>
        <% default_source = @payment_methods.any? ? "saved" : "new" %>
        <header class="space-y-1">
          <h2 class="text-base font-semibold text-slate-900">Payment method</h2>
          <p class="text-sm text-slate-600">PayGate securely processes the payment. We never store your full card number.</p>
        </header>

        <%= form_with url: club_checkout_path, method: :post, local: true, data: { controller: "payment-method" }, class: "space-y-6" do %>
          <%= hidden_field_tag "checkout[payment_source]", default_source, data: { payment_method_target: "sourceInput" } %>
          <%= hidden_field_tag "checkout[payment_method_id]", default_source == "saved" ? default_method&.id : "", data: { payment_method_target: "methodInput" } %>

          <div class="space-y-4">
            <%= turbo_frame_tag "club_checkout_payment_methods",
                                data: { action: "turbo:frame-load->payment-method#refresh" } do %>
              <%= render "club/carts/saved_payment_methods",
                         payment_methods: @payment_methods,
                         selected_method_id: default_source == "saved" ? default_method&.id : nil,
                         error_message: nil %>
            <% end %>

            <label class="flex cursor-pointer items-center gap-3 rounded-lg border <%= default_source == 'new' ? 'border-slate-900 shadow-sm' : 'border-slate-300' %> bg-white px-4 py-3 text-sm transition hover:border-slate-400"
                   data-payment-method-target="option"
                   data-selection="new"
                   data-method-id="">
              <input type="radio"
                     name="checkout[payment_option]"
                     value="new"
                     class="h-4 w-4 border-slate-300 text-slate-900 focus:ring-slate-500"
                     <%= "checked" if default_source == "new" %>
                     data-action="change->payment-method#choose"
                     data-payment-method-selection-param="new"
                     data-payment-method-id-param="">
              <span class="font-medium text-slate-900">Pay with a new card</span>
            </label>
          </div>

          <div class="space-y-4 <%= default_source == "new" ? "" : "hidden" %>" data-payment-method-target="newCardSection">
            <div class="grid gap-4 md:grid-cols-2">
              <div class="space-y-1 md:col-span-2">
                <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Cardholder name</label>
                <%= text_field_tag "checkout[card][holder_name]", nil, class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none focus:ring", placeholder: "As printed on card", autocomplete: "cc-name" %>
              </div>
              <div class="space-y-1 md:col-span-2">
                <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Card number</label>
                <%= text_field_tag "checkout[card][number]", nil, class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none focus:ring", placeholder: "0000 0000 0000 0000", inputmode: "numeric", autocomplete: "cc-number" %>
              </div>
              <div class="space-y-1">
                <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Expiry month</label>
                <%= number_field_tag "checkout[card][expiry_month]", nil, min: 1, max: 12, class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none focus:ring", placeholder: "MM", inputmode: "numeric", autocomplete: "cc-exp-month" %>
              </div>
              <div class="space-y-1">
                <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Expiry year</label>
                <%= number_field_tag "checkout[card][expiry_year]", nil, min: Time.current.year, class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none focus:ring", placeholder: "YYYY", inputmode: "numeric", autocomplete: "cc-exp-year" %>
              </div>
              <div class="space-y-1">
                <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">CVV</label>
                <%= password_field_tag "checkout[card][cvv]", nil, class: "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none focus:ring", placeholder: "123", inputmode: "numeric", autocomplete: "cc-csc" %>
              </div>
            </div>

            <label class="inline-flex items-start gap-2 text-sm text-slate-600">
              <%= check_box_tag "checkout[tokenize]", "1", true, class: "mt-1 h-4 w-4 rounded border-slate-300 text-slate-900", data: { payment_method_target: "tokenizeToggle" }, disabled: true %>
              <span>Card details are saved securely for future checkouts.</span>
            </label>
          </div>

          <div class="space-y-2 rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-xs text-slate-500">
            <p>Payments are processed instantly via PayGate PayHost. Card data never touches Easy Club servers.</p>
          </div>

          <div class="flex items-center justify-end">
            <%= submit_tag "Pay now", class: "inline-flex min-w-[220px] items-center justify-center rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold text-white shadow transition hover:bg-slate-800" %>
          </div>
        <% end %>
      </section>
    </div>
  <% end %>
</div>
