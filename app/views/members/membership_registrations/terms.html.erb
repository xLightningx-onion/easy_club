<%= content_for :club_header do %>
  <div class="bg-white rounded-[15px] flex flex-col justify-center items-center py-5 px-5">
    <%= image_tag serve_image_remote_url(@club.logo), class: "max-w-[200px] mb-5" %>
    <h2 class="text-3xl lg:text-3xl font-semibold text-center lg:text-start">
      New Membership
    </h2> 
  </div>
  <style>
    .club-header-color {
      background-color: blue;
    }
  </style>
<% end %>

<%= content_for :progress_bar do %>
  <%= render "members/membership_registrations/progress_bar", step_count: 4 %>
<% end %>

<div class="py-3">
  <%= form_with model: @form, url: members_membership_registration_path(step: "terms", club_id: @club.id), method: :patch, class: "space-y-8" do |f| %>
    <%= render "shared/form_errors", resource: @form if @form.errors.any? && lookup_context.exists?("shared/_form_errors") %>

    <% if @club_terms.any? %>
      <div class="space-y-4">

        <h2 class="text-2xl lg:text-3xl font-semibold text-center lg:text-start mb-3">
          Club Terms
        </h2> 
        <div class="space-y-2 text-center lg:text-start">
          <p class="text-sm text-slate-600">Review and acknowledge the clubâ€™s rules before completing your registration.</p>
        </div>


        <div class="space-y-4">
          <% @club_terms.each do |term| %>
            <article class="rounded-xl border border-slate-200 bg-white px-4 py-4 shadow-sm">
              <header class="flex flex-col gap-2 md:flex-row md:items-start md:justify-between">
                <div>
                  <h3 class="text-base font-semibold text-slate-900"><%= term.title %></h3>
                  <% if term.required? %>
                    <p class="text-xs font-medium uppercase tracking-wide text-rose-600">Required</p>
                  <% else %>
                    <p class="text-xs font-medium uppercase tracking-wide text-slate-400">Optional</p>
                  <% end %>
                </div>
              </header>
              <div class="mt-3 max-h-48 overflow-y-auto rounded border border-slate-100 bg-slate-50 px-3 py-2">
                <div class="prose prose-sm max-w-none text-slate-700">
                  <%= simple_format(term.body) %>
                </div>
              </div>
              <label class="mt-4 inline-flex items-start gap-3 text-sm text-slate-700">
                <input
                  type="checkbox"
                  name="membership_registration_form[terms_acceptances][<%= term.id %>]"
                  value="1"
                  class="mt-1 h-4 w-4 rounded border-slate-300 text-slate-900 focus:ring-slate-500"
                  <%= @form.accepted_term?(term) ? "checked" : nil %>
                  <%= term.required? ? "required" : nil %>
                >
                <span>I agree to the above term.</span>
              </label>
            </article>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 px-6 py-10 text-center">
        <p class="text-sm text-slate-500">This club has not added any specific terms yet. You can continue to order confirmation.</p>
      </div>
    <% end %>

    <div class="flex items-center justify-between">
      <%= link_to "Previous", members_membership_registration_path(step: "survey", club_id: @club.id), class: "rounded-full border border-slate-200 px-5 py-2 text-sm font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-900" %>
      <%= f.submit(@club_terms.any? ? "Agree & continue" : "Continue", class: "inline-flex min-w-[160px] items-center justify-center rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold text-white shadow transition hover:bg-slate-800") %>
    </div>
  <% end %>
</div>
