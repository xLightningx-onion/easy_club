<% content_for :title, "Retention jobs Â· Admin" %>
<% content_for :page_heading, "Retention jobs" %>

<section class="rounded-lg border border-slate-200 bg-white shadow-sm">
  <header class="border-b border-slate-200 px-4 py-3">
    <h2 class="text-base font-semibold text-slate-900">Trigger a job</h2>
  </header>
  <div class="px-4 py-4">
    <%= form_with url: admin_retention_jobs_path, method: :post, class: "grid gap-4 md:grid-cols-3" do |form| %>
      <div class="md:col-span-2">
        <%= form.label :club_id, "Club", class: "block text-sm font-medium text-slate-700" %>
        <%= form.collection_select :club_id, @clubs, :id, :name, {}, class: "mt-1 w-full rounded border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none focus:ring" %>
      </div>
      <div class="md:flex md:items-end">
        <%= form.submit "Queue retention job", class: "w-full rounded bg-slate-900 px-4 py-2 text-sm font-medium text-white hover:bg-slate-800" %>
      </div>
    <% end %>
  </div>
</section>

<section class="mt-6 rounded-lg border border-slate-200 bg-white shadow-sm">
  <header class="border-b border-slate-200 px-4 py-3">
    <h2 class="text-base font-semibold text-slate-900">Recent runs</h2>
  </header>
  <table class="min-w-full divide-y divide-slate-200 text-sm">
    <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
      <tr>
        <th class="px-4 py-3">Club</th>
        <th class="px-4 py-3">Status</th>
        <th class="px-4 py-3">Report</th>
        <th class="px-4 py-3">Created</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-100">
      <% @report_runs.each do |run| %>
        <tr class="hover:bg-slate-50">
          <td class="px-4 py-3 text-slate-600"><%= run.club.name %></td>
          <td class="px-4 py-3">
            <% badge = run.status_ready? ? "bg-emerald-50 text-emerald-700" : run.status_failed? ? "bg-rose-50 text-rose-700" : "bg-amber-50 text-amber-700" %>
            <span class="inline-flex rounded-full px-2 py-0.5 text-xs font-medium <%= badge %>"><%= run.status.humanize %></span>
          </td>
          <td class="px-4 py-3 text-slate-600"><%= run.report_name %></td>
          <td class="px-4 py-3 text-slate-500"><%= run.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
