<turbo-frame id="<%= dom_id(membership_question) %>">
  <article class="flex flex-col gap-4 px-4 py-4 transition hover:bg-slate-50 md:flex-row md:items-start md:justify-between">
    <div class="space-y-3">
      <div class="flex items-center gap-2 text-xs font-medium uppercase tracking-wide text-slate-400">
        <span>Question <%= index || "?" %></span>
        <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-0.5 text-[11px] font-semibold text-slate-600">
          <%= membership_question.answer_type.humanize %>
        </span>
        <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-[11px] font-semibold <%= membership_question.required? ? "bg-emerald-100 text-emerald-700" : "bg-slate-100 text-slate-600" %>">
          <%= membership_question.required? ? "Required" : "Optional" %>
        </span>
      </div>

      <div class="space-y-2">
        <p class="text-sm font-medium text-slate-900"><%= membership_question.prompt %></p>
        <% if membership_question.help_text.present? %>
          <p class="text-sm text-slate-500"><%= membership_question.help_text %></p>
        <% end %>
      </div>

      <% if membership_question.options.present? %>
        <div class="flex flex-wrap gap-2">
          <% membership_question.options.each do |option| %>
            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">
              <%= option %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-2 md:flex-col md:items-end">
      <button
        type="button"
        class="inline-flex items-center gap-1 rounded border border-slate-300 px-3 py-1.5 text-sm font-medium text-slate-700 transition hover:bg-slate-100"
        data-action="modal#open"
        data-modal-url="<%= edit_admin_club_membership_question_path(club, membership_question) %>"
        data-modal-frame="<%= dom_id(club, :membership_question_modal) %>"
        data-modal-title="Edit membership question"
      >
        Edit
      </button>
      <%= link_to "Delete",
                  admin_club_membership_question_path(club, membership_question),
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Delete this question? Members will no longer be asked to answer it.",
                    turbo_frame: dom_id(club, :membership_questions)
                  },
                  class: "inline-flex items-center gap-1 rounded bg-rose-50 px-3 py-1.5 text-sm font-medium text-rose-600 transition hover:bg-rose-100" %>
    </div>
  </article>
</turbo-frame>
