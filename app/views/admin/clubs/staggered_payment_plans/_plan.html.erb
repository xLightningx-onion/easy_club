<turbo-frame id="<%= dom_id(plan) %>">
  <article class="flex flex-col gap-4 px-4 py-4 transition hover:bg-slate-50 md:flex-row md:items-start md:justify-between">
    <div class="space-y-3">
      <div class="flex flex-wrap items-center gap-2 text-xs font-medium uppercase tracking-wide text-slate-400">
        <span>Plan <%= index || "â€“" %></span>
        <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-[11px] font-semibold <%= plan.active? ? "bg-emerald-100 text-emerald-700" : "bg-slate-100 text-slate-500" %>">
          <%= plan.active? ? "Active" : "Hidden" %>
        </span>
      </div>

      <div class="space-y-1">
        <h3 class="text-sm font-semibold text-slate-900"><%= plan.name %></h3>
        <div class="flex flex-wrap items-center gap-3 text-xs text-slate-500">
          <% if plan.starts_on.present? %>
            <span>Starts <%= l(plan.starts_on, format: :long) %></span>
          <% end %>
          <% if plan.ends_on.present? %>
            <span>Ends <%= l(plan.ends_on, format: :long) %></span>
          <% end %>
        </div>
        <% if plan.description.present? %>
          <p class="text-xs text-slate-500"><%= plan.description %></p>
        <% end %>
      </div>

      <div class="overflow-hidden rounded-lg border border-slate-200">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
            <tr>
              <th class="px-3 py-2">Installment</th>
              <th class="px-3 py-2">% of order</th>
              <th class="px-3 py-2">Amount</th>
              <th class="px-3 py-2">Due date</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 bg-white">
            <% plan.ordered_installments.each_with_index do |installment, idx| %>
              <tr>
                <td class="px-3 py-2 font-medium text-slate-700">#<%= idx + 1 %></td>
                <td class="px-3 py-2 text-slate-600"><%= number_with_precision(installment.percentage, precision: 2) %>%</td>
                <td class="px-3 py-2 text-slate-600">
                  <% if installment.amount.present? %>
                    <%= installment.amount.format %>
                  <% else %>
                    <span class="text-xs text-slate-400">Calculated at checkout</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-slate-600">
                  <% if installment.due_on.present? %>
                    <%= l(installment.due_on, format: :long) %>
                  <% else %>
                    <span class="text-xs text-slate-400">Not set</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="flex items-center gap-2 md:flex-col md:items-end">
      <button
        type="button"
        class="inline-flex items-center gap-1 rounded border border-slate-300 px-3 py-1.5 text-sm font-medium text-slate-700 transition hover:bg-slate-100"
        data-action="modal#open"
        data-modal-url="<%= edit_admin_club_staggered_payment_plan_path(club, plan) %>"
        data-modal-frame="<%= dom_id(club, :staggered_payment_plan_modal) %>"
        data-modal-title="Edit staggered payment plan"
      >
        Edit
      </button>
      <%= link_to "Delete",
                  admin_club_staggered_payment_plan_path(club, plan),
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Delete this payment plan?",
                    turbo_frame: dom_id(club, :staggered_payment_plans)
                  },
                  class: "inline-flex items-center gap-1 rounded bg-rose-50 px-3 py-1.5 text-sm font-medium text-rose-600 transition hover:bg-rose-100" %>
    </div>
  </article>
</turbo-frame>
