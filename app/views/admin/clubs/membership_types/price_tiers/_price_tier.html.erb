<turbo-frame id="<%= dom_id(price_tier) %>">
  <li class="flex items-center justify-between rounded border border-slate-200 px-3 py-2">
    <div>
      <p class="text-sm font-medium text-slate-900"><%= price_tier.label %></p>
      <p class="text-xs text-slate-500">Amount: <%= price_tier.amount.format %></p>
    </div>
    <div class="flex items-center gap-2">
      <button
        type="button"
        class="inline-flex items-center gap-1 rounded border border-slate-300 px-2.5 py-1 text-xs font-medium text-slate-700 transition hover:bg-slate-100"
        data-action="modal#open"
        data-modal-url="<%= edit_admin_club_membership_type_price_tier_path(club, membership_type, price_tier) %>"
        data-modal-frame="<%= dom_id(club, :membership_type_modal) %>"
        data-modal-title="Edit price tier"
      >
        Edit
      </button>
      <%= link_to "Delete",
                  admin_club_membership_type_price_tier_path(club, membership_type, price_tier),
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Delete this price tier?",
                    turbo_frame: dom_id(membership_type, :price_tiers)
                  },
                  class: "inline-flex items-center gap-1 rounded bg-rose-50 px-2.5 py-1 text-xs font-medium text-rose-600 transition hover:bg-rose-100" %>
    </div>
  </li>
</turbo-frame>
