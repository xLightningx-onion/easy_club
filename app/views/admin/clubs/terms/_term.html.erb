<turbo-frame id="<%= dom_id(term) %>">
  <article class="flex flex-col gap-4 px-4 py-4 transition hover:bg-slate-50 md:flex-row md:items-start md:justify-between">
    <div class="space-y-3">
      <div class="flex flex-wrap items-center gap-2 text-xs font-medium uppercase tracking-wide text-slate-400">
        <span>Term <%= index || "?" %></span>
        <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-[11px] font-semibold <%= term.required? ? "bg-emerald-100 text-emerald-700" : "bg-slate-100 text-slate-600" %>">
          <%= term.required? ? "Required" : "Optional" %>
        </span>
        <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-[11px] font-semibold <%= term.active? ? "bg-sky-100 text-sky-700" : "bg-slate-100 text-slate-500" %>">
          <%= term.active? ? "Visible" : "Hidden" %>
        </span>
      </div>
      <div class="space-y-2">
        <h3 class="text-sm font-semibold text-slate-900"><%= term.title %></h3>
        <div class="max-h-48 overflow-y-auto rounded border border-slate-100 bg-slate-50 px-3 py-2">
          <div class="prose prose-sm max-w-none text-slate-700">
            <%= simple_format(term.body) %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex items-center gap-2 md:flex-col md:items-end">
      <button
        type="button"
        class="inline-flex items-center gap-1 rounded border border-slate-300 px-3 py-1.5 text-sm font-medium text-slate-700 transition hover:bg-slate-100"
        data-action="modal#open"
        data-modal-url="<%= edit_admin_club_term_path(club, term) %>"
        data-modal-frame="<%= dom_id(club, :club_term_modal) %>"
        data-modal-title="Edit term"
      >
        Edit
      </button>
      <%= link_to "Delete",
                  admin_club_term_path(club, term),
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Delete this term?",
                    turbo_frame: dom_id(club, :club_terms)
                  },
                  class: "inline-flex items-center gap-1 rounded bg-rose-50 px-3 py-1.5 text-sm font-medium text-rose-600 transition hover:bg-rose-100" %>
    </div>
  </article>
</turbo-frame>
