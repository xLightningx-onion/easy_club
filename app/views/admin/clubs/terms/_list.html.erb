<% if terms.any? %>
  <div class="divide-y divide-slate-200">
    <% terms.each_with_index do |term, index| %>
      <%= render "admin/clubs/terms/term",
                 club: club,
                 term: term,
                 index: index + 1 %>
    <% end %>
  </div>
<% else %>
  <div class="px-4 py-10 text-center text-sm text-slate-500">
    <p class="font-medium text-slate-700">No terms yet</p>
    <p class="mt-1 text-xs text-slate-500">Add club-specific terms and conditions for members to accept during registration.</p>
  </div>
<% end %>
